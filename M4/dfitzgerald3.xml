<!-- All our projects begin with the project tag --> 
<project name="cs2340_mule" default="all" basedir=".">
   <!-- our init target is a prereq for everything -->
   <target name="init">
       <property name="src.dir" value="M4" />
	   <property name="build.dir" value="${src.dir}/bin" />
   	   <property name="api.dir" value="${src.dir}/apidoc" />
       <property name="lib.dir" value="${src.dir}/lib" />
       <property name="package.name" value="" />
       <property name="class.name" value="edu.gatech.oad.antlab.pkg1.AntLabMain" />
   </target>
   
   <!-- prepare is a prereq for most tasks except cleanup
     -->
   <target name="prepare" depends="init">
		<mkdir dir="${build.dir}" />
   </target>
   
   <!-- compile the code -->
   <target name="compile" depends="prepare">
       <javac destdir="${build.dir}">
            <src path="${src.dir}"/>
            <classpath>
                <pathelement path="${build.dir}"/>
                <pathelement path="${lib.dir}/resources.jar"/>
            </classpath> 
		</javac>
   </target>
   
   <!-- run the application -->
   <target name="run" depends="compile">
        <java classname="${class.name}">
            <classpath>
                <pathelement path="${java.class.path}" />
                <pathelement location="${build.dir}" />
                <pathelement path="${lib.dir}/resources.jar" />
            </classpath>
       </java>
   </target>
   
   <!-- Template for next two targets based on: http://www.vogella.com/articles/ApacheAnt/article.html -->
   <!-- Creates Javadoc -->
  <target name="javadoc" depends="compile">
    <javadoc packagenames="src" sourcepath="${src.dir}" destdir="${api.dir}">
            <classpath>
                <fileset dir="${lib.dir}">
                    <include name="resources.jar"/>
                </fileset>
            </classpath>
      <!-- Define which files should get included -->
       <fileset dir="${src.dir}">
                <include name="**/*.java" />
           </fileset>
    </javadoc>
  </target>

  <!--Creates the deployable jar file  -->
  <target name="jar" depends="compile">
    <jar destfile="AntLabRun.jar">
    	<fileset dir="${build.dir}" />
      <manifest>
        <attribute name="Author" value="Dan Fitzgerald" />
      	<attribute name="Main-Class" value="${class.name}"/>
      	<attribute name="Class-Path" value="${lib.dir}/resources.jar"/>
      </manifest>
    </jar>
  </target>
	
   <!-- clean up all files generated by the build -->
   <target name="clean" depends="init" >
      <delete dir="${build.dir}" />
      <delete dir="${api.dir}" />
   	  <delete file="AntLabRun.jar" />
   </target>
   
   <!-- run all tasks except cleanup -->
   <target name="all" depends="run, javadoc, jar" />

</project>
